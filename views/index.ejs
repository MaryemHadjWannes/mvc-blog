<!DOCTYPE html>
<html lang="en">
<head>
    <title>Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>All Posts</h1>
    <a href="/add">Add a Post</a>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <small><%= post.date.toDateString() %></small>
            </li>
        <% }) %>
    </ul>
</body>
</html>
